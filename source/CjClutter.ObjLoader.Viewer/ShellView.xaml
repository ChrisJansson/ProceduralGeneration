<Window x:Class="CjClutter.ObjLoader.Viewer.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:OpenTK="clr-namespace:OpenTK;assembly=OpenTK.GLControl" Title="ShellView">

    <DockPanel Background="White">

        <Button
            x:Name="Browse"
            Content="Browse..."
            DockPanel.Dock="Top" />
        
        <TextBlock 
            DockPanel.Dock="Top"
            Text="Hello Caliburn Micro!"
		    VerticalAlignment="Center"
	        HorizontalAlignment="Center"
		    FontSize="20" />

        <WindowsFormsHost
            DockPanel.Dock="Bottom"
            Margin="10">
            <OpenTK:GLControl 
                x:Name="glControl"
                Load="OnGlControlLoad"
                Paint="OnGlControlPaint"
                Resize="OnGlControlResize" />
        </WindowsFormsHost>

    </DockPanel>

</Window>
