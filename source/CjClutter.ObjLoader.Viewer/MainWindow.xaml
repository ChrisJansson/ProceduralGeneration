<Window x:Class="CjClutter.ObjLoader.Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:OpenTK="clr-namespace:OpenTK;assembly=OpenTK.GLControl" Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        
        <Button 
            Content="Browse..." 
            DockPanel.Dock="Bottom"
            Click="OnBrowseButtonClick"/>
        
        <WindowsFormsHost
            Margin="10">
            <OpenTK:GLControl 
                x:Name="glControl"
                Load="OnGlControlLoad"
                Paint="OnGlControlPaint"
                Resize="OnGlControlResize" />
        </WindowsFormsHost>
    </DockPanel>
</Window>
